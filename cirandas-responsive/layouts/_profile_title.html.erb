      <h1 class="page-title">
      <% unless profile.enterprise? || profile.community? %>
        <% if profile.image %>
          <div id="page-title-profile-image">
            <%= profile_image profile, :thumb %>
          </div>
        <% end %>
      <% end %>
      
      <%= profile.short_name %>
      
      <% if profile.enterprise? %>
        <span class="solidarity-economy">Empreendimento de Economia Solid√°ria</span>
      <% end %>
      </h1>
    </div>
