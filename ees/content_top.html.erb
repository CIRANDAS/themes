<% theme_header = Nokogiri::HTML.fragment(profile.custom_header).search('img').first['src'] rescue nil %>
<div id="profile-theme-header" <% if theme_header.present? %> style="background-image: url('<%= theme_header %>')" <% end %>>
	<h1 class='page-title'>
  	<% if profile.image.present? %>
  		<div id='page-logo'>
			<%= link_to profile_image(profile, nil), profile.url %>
		</div>
	<% end %>
	<div class="profile-name"><%= link_to profile.short_name, profile.url %></div>
	<span class="solidarity-economy">Empreendimento de Economia Solid√°ria</span>
  </h1>
</div>
